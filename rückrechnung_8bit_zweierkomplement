def getZahl():
    return random.randint(-128, -1)

def convertZahl(Num):
    Num2 = Num + 256
    return dez_in_bin(Num2)

def dez_in_bin(x):
    ''' Zahl als Eingabe gefordert '''
    if x == 0: return ""
    if x%2 == 1: return dez_in_bin(x//2) + "1"
    return dez_in_bin(x//2) + "0"
